<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:padding="2dp"
        android:gravity="center"
        android:background="@drawable/outline_layout_gray_thin">
        <ImageButton
            android:id="@+id/item_color_title_IV"
            style="@android:style/Widget.Material.ImageButton"
            android:layout_width="@dimen/dialog_color_box_size"
            android:layout_height="@dimen/dialog_color_box_size"
            android:layout_gravity="center_horizontal"

            android:background="@color/color_1"
            android:scaleType="fitCenter" />
    </LinearLayout>


    <TextView
        android:id="@+id/item_color_title_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="색상"
        android:textAlignment="center"/>
</LinearLayout>
