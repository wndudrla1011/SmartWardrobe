<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_rose2"
    tools:context="com.teamcom.smartwardrobe.JoinActivity">

    <include
        android:id="@+id/include"
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_marginHorizontal="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="32dp"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/j_id_text"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:text="아이디"
                android:textAlignment="center"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:textColor="@android:color/black"/>

            <EditText
                android:id="@+id/j_id"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:inputType="textPersonName" />
            <Button
                android:id="@+id/jbtn_overlap"
                android:layout_width="32dp"
                android:layout_height="36dp"
                android:text="중복 확인"
                android:background="@drawable/outline_layout_gray_thin"
                android:textSize="12sp"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"

            android:layout_marginRight="32dp"
            android:gravity="center">
            <TextView
                android:id="@+id/j_name_text"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:text="이름"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textColor="@android:color/black"/>

            <EditText
                android:id="@+id/j_name"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="32dp">
            <TextView
                android:id="@+id/j_num_text"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:text="비밀번호"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/j_num"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:inputType="textPassword" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="32dp">
            <TextView
                android:id="@+id/j_num_text2"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:text="비밀번호 확인"
                android:textAlignment="center"
                android:gravity="center_vertical"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/j_num2"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:inputType="textPassword" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="36dp">
            <Button
                android:id="@+id/jbtn_cancel"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/center_point"
                android:background="@drawable/outline_layout_gray_thin"
                android:text="취소"/>
            <View
                android:id="@+id/center_point"
                android:layout_width="16dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:background="@android:color/transparent"/>
            <Button
                android:id="@+id/jbtn_join"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/center_point"
                android:background="@drawable/outline_layout_gray_thin"
                android:text="회원가입"/>
        </RelativeLayout>

    </LinearLayout>






</android.support.constraint.ConstraintLayout>
